	<!--
		The agent has one plan for translating words from English to German
		using on-line dictionary.
	-->
<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
      http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Translation" package="pl.edu.agh.jadex">
	<plans>
		<plan name="searchonline">
			<parameter name="eword" class="String">
				<messageeventmapping ref="request_translation.content" />
			</parameter>
			<body>new SearchTranslationOnline()</body>
			<trigger>
				<messageevent ref="request_translation" />
			</trigger>
		</plan>
	</plans>
	<events>
		<messageevent name="request_translation" direction="receive"
			type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>jadex.adapter.fipa.SFipa.REQUEST
				</value>
			</parameter>
		</messageevent>
	</events>

	<configurations>
		<configuration name="default">
		</configuration>
	</configurations>
</agent>
