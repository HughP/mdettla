<?xml version="1.0"?>
<mx:Application
    xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:tt="tt.mx.*"
    backgroundGradientColors="[#FFFFFF, #FFFFFF]"
    creationComplete="init()">

    <mx:HTTPService id="getTextService"
        url="http://sigma.ug.edu.pl/~mdettla/typing_test/web/texts.php" />

    <mx:HTTPService id="submitTestResultsService"
        url="http://sigma.ug.edu.pl/~mdettla/typing_test/web/ttlog.php"
        method="POST" />

    <mx:Script source="tt/mx/script.as" />

    <mx:Panel title="Test prędkości pisania" layout="vertical"
        backgroundColor="#E0E0F0" borderColor="#8090D0"
        paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">

        <tt:TypingCanvas id="typingCanvas" width="575" height="275" />

        <mx:HBox verticalAlign="bottom">
            <mx:Label text="prędkość:" />
            <mx:Label text="{speed} zn./min" fontSize="12" />
            <mx:Label text="poprawność" />
            <mx:Label text="{correctness}%" fontSize="12" />
        </mx:HBox>

        <mx:HBox>
            <mx:Button id="newTestButton" label="Rozpocznij nowy test" />
            <mx:Button id="pauseButton" label="{PAUSE}" />
        </mx:HBox>

    </mx:Panel>

</mx:Application>
